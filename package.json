{
  "name": "firsthand-smoke-tests",
  "version": "1.0.0",
  "description": "Cypress Test Automation",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cy:run": "cypress run --env --headed",
    "cypress:dashboard": "cypress run --record --key 2cac947f-36e4-4f71-b0d1-97411438c8b9",
    "allure:report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "allure:clear": "if exist allure-results rmdir /q /s allure-results && if exist allure-report rmdir /q /s allure-report && if exist cypress\\screenshots rmdir /q /s cypress\\screenshots && if exist cypress\\videos rmdir /q /s cypress\\videos",
    "test:chrome": "cypress run --browser chrome --headless",
    "test:firefox": "cypress run --browser firefox --headless",
    "test:edge": "cypress run --browser edge --headless",
    "clean:reports": "if exist cypress\\reports rmdir /s/q cypress\\reports && mkdir cypress\\reports && mkdir cypress\\reports\\mochareports",
    "pretest": "npm run clean:reports",
    "scripts": "cypress run --browser chrome --headless",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test": "npm run scripts || npm run posttest"
  },
  "author": "Sairam Kalluru",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@shelex/cypress-allure-plugin": "^2.26.5",
    "@testing-library/cypress": "^9.0.0",
    "allure-commandline": "^2.17.2",
    "chai": "^4.3.6",
    "cy-verify-downloads": "^0.1.8",
    "cypress": "^11.0.1",
    "cypress-file-upload": "^5.0.8",
    "cypress-iframe": "^1.0.1",
    "cypress-mochawesome-reporter": "^3.1.0",
    "cypress-multi-reporters": "^1.6.0",
    "cypress-plugin-stripe-elements": "^1.0.2",
    "cypress-xpath": "^1.6.2",
    "mocha": "^10.0.0",
    "mocha-allure-reporter": "^1.4.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "@stdlib/fs-read-file": "^0.0.8",
    "csv": "^6.2.0",
    "csv-parser": "^3.0.0",
    "fs": "^0.0.1-security",
    "papaparse": "^5.3.2",
    "readdir": "^1.0.2",
    "system": "^2.0.1"
  }
}
